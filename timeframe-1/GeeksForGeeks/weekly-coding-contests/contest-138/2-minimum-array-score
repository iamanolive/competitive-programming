#include <iostream>
#include <vector>
using namespace std;

int minimizeArrayScore(int n, vector<int> &arr) {
    vector<int> result;
    sort(arr.begin(), arr.end());
    for(int i = 0; i < n/2; i++)
        result.push_back(arr[i] + arr[n - i - 1]);
    sort(result.begin(), result.end());
    return result[result.size() - 1];
}